<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="createkill.CreateKillController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          hgap="10" vgap="10">
    
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <!-- Bot贸n para abrir Notepad -->
    <Button text="Abrir Notepad" onAction="#handleOpenNotepad" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    
    <!-- Bot贸n para cerrar Notepad -->
    <Button text="Cerrar Notepad" onAction="#handleCloseNotepad" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <!-- Bot贸n para abrir CMD y hacer ping -->
    <Button text="Abrir CMD - Ping" onAction="#handleOpenCMDPing" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    
    <!-- Bot贸n para cerrar CMD -->
    <Button text="Cerrar CMD" onAction="#handleCloseCMD" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

</GridPane>
